<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@null"
    tools:context=".ui.auth.RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!--REGISTRATION LAYOUT-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!--IMAGE COVER-->
            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="36dp"
                android:src="@drawable/bg_register"
                android:alpha="0"
                tools:alpha="1"
                app:layout_constraintTop_toTopOf="parent" />

            <!--SIGN UP TITLE-->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="36dp"
                android:text="Register Now!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:alpha="0"
                tools:alpha="1"
                app:layout_constraintTop_toBottomOf="@id/img_cover" />

            <!--SUBTITLE-->
            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:text="To explore healthy foods with us"
                android:textSize="16sp"
                android:alpha="0"
                tools:alpha="1"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <!--USER NAME FIELD-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtl_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="36dp"
                android:alpha="0"
                android:hint="Name"
                app:startIconDrawable="@drawable/ic_user"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
                tools:alpha="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    android:inputType="text"
                    tools:alpha="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--EMAIL FIELD-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtl_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginHorizontal="36dp"
                android:alpha="0"
                android:hint="Email"
                app:startIconDrawable="@drawable/ic_email"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edtl_name"
                tools:alpha="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    android:inputType="textEmailAddress"
                    tools:alpha="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--PASSWORD FIELD-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtl_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="18dp"
                android:alpha="0"
                android:hint="Password"
                app:counterEnabled="true"
                app:helperText="*Should contain at least 6 char"
                app:startIconDrawable="@drawable/ic_password"
                app:endIconMode="password_toggle"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edtl_email"
                tools:alpha="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:alpha="0"
                    tools:alpha="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--SIGN UP BUTTON-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginVertical="48dp"
                android:alpha="0"
                android:background="@drawable/bg_button_filled"
                android:text="SIGN UP"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtl_password"
                tools:alpha="1"
                tools:layout_editor_absoluteX="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--LOADING LAYOUT-->
        <include
            layout="@layout/loading_layout"
            android:id="@+id/loading_layout"
            android:visibility="gone" />

    </FrameLayout>

</ScrollView>